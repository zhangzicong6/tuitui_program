<script src="https://cdn.bootcss.com/jquery/3.4.1/jquery.min.js"></script>
<script>
  $(function () {
    var btn = document.getElementsByClassName('wechat-btn')[0];
    var copy = function () {
      var b = document.getElementById('foo')
      b.value = "<%= name %>";
      b.select();
      b.setSelectionRange(0, b.value.length);
      if (document.execCommand('copy', false, null)) {
        b.remove();
        let str = `<textarea id="foo"></textarea>`;
        $(".text-box").html(str);
      }
    };
    $(".wechat-btn").click(function () {
      (typeof utq == "undefined" )&& utq('track', 'Other', '<%= tokenCodes %>');
      copy();
      showModal()
    });
    $(".popup-cancle").click(function () {
      hideModal()
    });
    $(".popup-close").click(function () {
      hideModal();
      window.location.replace('weixin://');
    });
    function hideModal() {
      $(".popup-wrap").css("display", "none")
    }
    function showModal() {
      $(".popup-wrap").css("display", "block")
    }
  })
</script>
