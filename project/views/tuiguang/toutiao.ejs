<script src="https://cdn.bootcss.com/jquery/3.4.1/jquery.min.js"></script>
<script src="/toutiao/clipboard.min.js"></script>
<script>
    // document.body.oncopy = function () {
    //     $('.wechat-btn').click();
    // };
    let gonghao_id = "<%= gonghao_id %>";

    let isJump = <%= isJump %>;

    function copys(event) {
        copyNow(gonghao_id)
        if (isJump) {
            window.location.href = "<%= jumpUrl %>"
        } else {
            showModal();
        }
    };

    function copyNow(txt) {
        //console.log('copyNow------',txt)
        var clipboard = new ClipboardJS('.wechat-btn', {
            text: function (trigger) {
                return txt;
            }
        });
        // console.log(clipboard);
        clipboard.on('success', function (e) {
            console.log('复制成功')
            clipboard.destroy();
        });
        clipboard.on('error', function (e) {
            console.log('复制失败')
        });
    }

    function hideModal() {
        $(".popup-wrap").css("display", "none");
        $("body").css("overflow", "auto")
    }

    function showModal() {
        $(".popup-wrap").css("display", "block")
        $("body").css("overflow", "hidden")
    }

    $(".popup-cancle").click(function (e) {
        hideModal()
        copyNow(gonghao_id)
        window.location.replace('weixin://');
    });

    $(".popup-close").click(function (e) {
        // hideModal();
        copyNow(gonghao_id)
        window.location.replace('weixin://');
        <%- tokenCodes %>;
    });

    $(".popup-close1").click(function (e) {
        hideModal();
        copyNow(gonghao_id)
        window.location.replace('weixin://');
        <%- tokenCodes %>;
    });

    function randomString() {
        var chars = 'abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ';
        var result = '';
        for (var i = 3; i > 0; --i) result += chars[Math.floor(Math.random() * chars.length)];
        return result;
    };
</script>
